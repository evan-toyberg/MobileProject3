<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/eventTypeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/event_icon"
            android:padding="5dp"
            app:srcCompat="@drawable/event"
            tools:ignore="NestedWeights" />

        <EditText
            android:id="@+id/eventTypeName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autofillHints="Event Name"
            android:hint="@string/event_type_name"
            android:inputType=""
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Enter Event Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            tools:text="Friday April 15, 2021" />

        <TextView
            android:id="@+id/atTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/atText" />

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text=""
            tools:text="12:00" />

        <TextView
            android:id="@+id/tillView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/tillText"
            />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text=""
            tools:text="1:00" />
    </LinearLayout>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:autofillHints="Event Description"
        android:padding="5dp"
        android:hint="@string/event_description"
        android:inputType=""
        android:textSize="20sp"
        tools:text="Enter Event description" />


</LinearLayout>





